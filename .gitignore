# Ignore bundler config
/.bundle

# Ignore environment files
/.env
/.env.*
!/.env.example
/config/master.key

# Ignore all logfiles and tempfiles
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore pidfiles, but keep the directory
/tmp/pids/*
!/tmp/pids/.keep

# Ignore storage (uploaded files in development)
/storage/*
!/storage/.keep

# Ignore database and local sqlite files
/db/*.sqlite3
/db/*.sqlite3-*

# Ignore editor and OS files
.DS_Store
.idea/
